<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFFFFFFF"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:background="@drawable/main_bk"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="62dp"
                android:layout_width="120.4dp"
                android:layout_height="42dp"
                android:textColor="#FFFFFFFF"
                android:textSize="30.04dp"
                android:text="@string/app_name1"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="313.5dp"
                android:layout_height="35.4dp"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp"
                android:text="@string/app_desc"/>
        </LinearLayout>

        <cn.jiguang.jmlinkdemo.shadow.ShadowLayout
            android:orientation="horizontal"
            android:layout_marginTop="13dp"
            android:id="@+id/openScheme"
            app:shadowColor="#E6EDFF"
            app:bgColor="#FFFFFF"
            app:xOffset="0dp"
            app:yOffset="0dp"
            app:blurRadius="5dp"
            android:layout_width="312dp"
            android:layout_height="60dp">

            <!--嵌套需要添加阴影的布局 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:src="@drawable/scheme_icon"
                android:layout_marginStart="18dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="@string/openScheme"
                android:textColor="#FF222328"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:src="@drawable/arrow"
                android:layout_marginStart="160dp"
                android:contentDescription="@string/todo" />
        </cn.jiguang.jmlinkdemo.shadow.ShadowLayout>

        <cn.jiguang.jmlinkdemo.shadow.ShadowLayout
            android:id="@+id/replay"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:shadowColor="#E6EDFF"
            app:bgColor="#FFFFFF"
            app:xOffset="0dp"
            app:yOffset="0dp"
            app:blurRadius="5dp"
            android:layout_width="312dp"
            android:layout_height="60dp">

            <!--嵌套需要添加阴影的布局 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:src="@drawable/replay_icon"
                android:layout_marginStart="18dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="@string/replay"
                android:textColor="#FF222328"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:src="@drawable/arrow"
                android:layout_marginStart="160dp"
                android:contentDescription="@string/todo" />
        </cn.jiguang.jmlinkdemo.shadow.ShadowLayout>

        <cn.jiguang.jmlinkdemo.shadow.ShadowLayout
            android:id="@+id/params"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:shadowColor="#E6EDFF"
            app:bgColor="#FFFFFF"
            app:xOffset="0dp"
            app:yOffset="0dp"
            app:blurRadius="5dp"
            android:layout_width="312dp"
            android:layout_height="60dp">

            <!--嵌套需要添加阴影的布局 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:src="@drawable/params_icon"
                android:layout_marginStart="18dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="@string/params"
                android:textColor="#FF222328"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:src="@drawable/arrow"
                android:layout_marginStart="160dp"
                android:contentDescription="@string/todo" />
        </cn.jiguang.jmlinkdemo.shadow.ShadowLayout>

        <cn.jiguang.jmlinkdemo.shadow.ShadowLayout
            android:id="@+id/models"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:shadowColor="#E6EDFF"
            app:bgColor="#FFFFFF"
            app:xOffset="0dp"
            app:yOffset="0dp"
            app:blurRadius="5dp"
            android:layout_width="312dp"
            android:layout_height="60dp">

            <!--嵌套需要添加阴影的布局 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:src="@drawable/models_icon"
                android:layout_marginStart="18dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="@string/models"
                android:textColor="#FF222328"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="160dp"
                android:src="@drawable/arrow"
                android:layout_marginStart="160dp"
                android:contentDescription="@string/todo" />
        </cn.jiguang.jmlinkdemo.shadow.ShadowLayout>

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:src="@drawable/logo"
            android:layout_height="13dp"/>
    </LinearLayout>
</ScrollView>